<%- include("partials/header"); -%>
<div class="login-container">
  <div class="div-login-container">
    <form action="/users/login" method="POST">
      <div class="sign-up-div">
        <h1 class="sign-up-h1">Sign In</h1>
        <input
          type="text"
          class="sign-up-input"
          name="email"
          placeholder="Email"
        />

        <input
          type="password"
          class="sign-up-input"
          name="password"
          placeholder="Password"
        />

        <button type="submit" class="sign-up-button">Sign In</button>

        <div class="footer-text">
          By signing in, you agree to the
          <a class="footer-anchor" href="#"> Terms of Service </a>
          and
          <a class="footer-anchor" href="#"> Privacy Policy </a>
        </div>
      </div>
    </form>

    <div class="footer-anchor-text-1">
      Don't have an account?
      <a class="footer-anchor-text-2" href="/users/signup"> Create Account </a>.
    </div>
  </div>
</div>
<%- include("partials/footer"); -%>
